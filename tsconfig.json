{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2015",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist/",
    "rootDir": "src",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/tests/**/*"]
}
